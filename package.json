{
    "name": "regular-table",
    "version": "0.5.6",
    "description": "A regular `<table>`, for an async and virtual data model.",
    "repository": {
        "type": "git",
        "url": "https://github.com/finos/regular-table"
    },
    "engines": {
        "node": ">=10.18.1"
    },
    "license": "Apache-2.0",
    "main": "dist/umd/regular-table.js",
    "module": "dist/umd/regular-table.js",
    "browser": "dist/umd/regular-table.js",
    "unpkg": "dist/umd/regular-table.js",
    "jsdelivr": "dist/umd/regular-table.js",
    "types": "index.d.ts",
    "files": [
        "dist/**/*",
        "src/less/*.less",
        "babel.config.js",
        "index.d.ts"
    ],
    "scripts": {
        "build:examples": "literally -c examples/literally.config.js && literally -c features/literally.config.js",
        "build:rollup": "rollup -c rollup.config.js",
        "build": "npm-run-all -p build:*",
        "clean": "rimraf dist",
        "declarations": "tsc -b declarationsconfig.json",
        "dist:examples": "node scripts/dist_examples.js",
        "docs": "jsdoc2md src/js/index.js --separators > api.md",
        "fix": "eslint --fix src features/*.md examples/*.md examples/*.html && prettier --write features/*.md",
        "lint": "npm-run-all lint:*",
        "lint:eslint": "eslint src features/*.md examples/*.md examples/*.html",
        "lint:prettier": "prettier --check features/*.md",
        "prettier": "prettier --write test/features/*.test.js features/*.md",
        "start": "http-server",
        "test": "yarn lint && jest --noStackTrace --runInBand",
        "watch:examples": "literally -c examples/literally.config.js --watch",
        "watch:features": "literally -c features/literally.config.js --watch",
        "watch:rollup": "rollup -c rollup.config.js --watch",
        "watch": "npm-run-all -p watch:*"
    },
    "publishConfig": {
        "access": "public"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-proposal-decorators": "^7.8.3",
        "@babel/plugin-proposal-optional-chaining": "^7.9.0",
        "@babel/preset-env": "^7.9.0",
        "@finos/perspective": "=0.5.0",
        "@rollup/plugin-babel": "^5.0.2",
        "@types/react": "^17.0.0",
        "babel-eslint": "^10.1.0",
        "babel-plugin-lodash": "^3.3.4",
        "babel-plugin-transform-custom-element-classes": "^0.1.0",
        "clean-css": "^4.2.3",
        "codedown": "^2.1.6",
        "commander": "^5.1.0",
        "eslint": "^7.1.0",
        "eslint-plugin-html": "^6.0.2",
        "eslint-plugin-markdown": "^2.0.0",
        "eslint-plugin-prettier": "^3.1.3",
        "glob": "^7.1.6",
        "http-server": "^0.12.3",
        "jest": "^26.0.1",
        "jest-puppeteer": "^6.1.0",
        "jest-puppeteer-docker": "^1.4.2",
        "jsdoc-to-markdown": "^6.0.1",
        "less": "^3.9.0",
        "literally-cli": "^0.0.9",
        "marked-ast-markdown": "^2.1.0",
        "npm-run-all": "^4.1.3",
        "prettier": "^2.0.5",
        "puppeteer": "^13.1.3",
        "react": "15",
        "react-dom": "15",
        "rollup": "^2.13.1",
        "rollup-plugin-filesize": "^9.0.0",
        "rollup-plugin-livereload": "^1.3.0",
        "rollup-plugin-postcss": "^3.1.2",
        "rollup-plugin-sourcemaps": "^0.6.2",
        "rollup-plugin-terser": "^6.1.0",
        "source-map-explorer": "^2.4.2",
        "source-map-loader": "^0.2.4",
        "superstore-arrow": "^1.0.0",
        "typescript": "^4.2.4"
    }
}
